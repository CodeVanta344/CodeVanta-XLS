{
  "name": "excelflow",
  "productName": "ExcelFlow",
  "version": "2.0.3",
  "description": "Application moderne pour visualiser et manipuler des donn√©es Excel",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "excel",
    "data",
    "visualization"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.codevanta.xls",
    "productName": "CodeVanta-XLS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "logo.png",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "logo.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "CodeVanta344",
        "repo": "CodeVanta-XLS"
      }
    ]
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "chart.js": "^4.5.1",
    "chokidar": "^5.0.0",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "xlsx": "^0.18.5"
  }
}